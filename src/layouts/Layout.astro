---
interface Props {
	title: string;
}

import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="DotaDraft" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png"/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body>
		<Header/>
		<div class="page">
			<slot />
		</div>
	</body>
</html>

<style is:global lang="scss">
	@font-face {
		font-family: Reaver;
		src: url('/fonts/Reaver-Bold.woff') format('woff');
		font-weight: bolder;
		font-style: normal;
	}
	@font-face {
		font-family: Reaver;
		src: url('/fonts/Reaver-SemiBold.woff') format('woff');
		font-weight: bold;
		font-style: normal;
	}
	@font-face {
		font-family: Reaver;
		src: url('/fonts/Reaver-Regular.woff') format('woff');
		font-weight: normal;
		font-style: normal;
	}
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		background-color: #110F0F;
		color:white;

		.page {
			margin-top:120px;
			display: flex;
			flex-direction: column;
			width: 100%;
			align-items: center;
		}
	}
</style>